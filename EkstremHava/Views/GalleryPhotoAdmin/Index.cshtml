@model IEnumerable<EkstremHava.Models.GalleryPhoto>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/yönet.css" />

<h4>Galeri Yönet</h4> <br/>

<p>
    <a asp-action="Create" style="color: orange; font-weight: bold; font-size:18px;">Yeni Oluştur</a>
</p> 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhotoName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="/img/@item.PhotoName" height="125" >
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GalleryPhotoId" class="edit-link">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.GalleryPhotoId" class="details-link">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.GalleryPhotoId" class="delete-link">Sil</a>
                </td>
        </tr>
}
    </tbody>
</table>
